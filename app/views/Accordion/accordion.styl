@import "../../assets/styl/vars";

.collapse
  margin 20px

  &-body
    display none
    padding 10px 20px
    background-color lighten($color__main, 95%)
    line-height 1.7

  &-title
    margin 0
    padding 10px 20px
    cursor pointer
    transition all 230ms ease-out
    background-color lighten($color__main, 90%)
    position relative

    &:after
      content ""
      border-top 6px solid lighten($color__main, 50%)
      border-left 6px solid transparent
      border-right 6px solid transparent
      position absolute
      top 0
      right 20px
      bottom 0
      margin auto
      display block
      height 0
      width 0
      transition all 230ms ease-out

    &:hover
      background-color lighten($color__main, 80%)

  &-item
    border 1px solid lighten($color__main, 70%)
    margin-bottom 20px
    &.opened

      .collapse-title
        &:after
          transform rotate(180deg)

      .collapse-body
        display block
